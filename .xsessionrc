#!/bin/bash

# input method
ibus-daemon &

# screensaver
xscreensaver -nosplash &

# googledrive
if [ "which google-drive-ocamlfuse" ]; then
  google-drive-ocamlfuse $HOME/googledrive &
fi

if [ -f ~/.Xmodmap ]; then
  xmodmap ~/.Xmodmap
fi

feh --bg-scale /usr/share/backgrounds/warty-final-ubuntu.png &
